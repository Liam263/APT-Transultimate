{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "name": "Run Script CORE: start:dev",
            "request": "launch",
            "command": "npm run start:dev",
            "cwd": "${workspaceFolder}/core"
        }
        ,
        {
            "type": "node-terminal",
            "name": "Run Script APP: start",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/app"
        }
    ]
}